--common
function _init()
	music(0)
	init()
	_update=update_title
	_draw=draw_title
end

function init()
	--game config
	max_atk_cnt=10
	atk_range=8
	gameover_time=60
	--player
	player={
		x=60,
		y=60,
		sp=1,
		dx=0,
		dy=0,
		acc=0.5,
		friction=0.85,
		atk_cnt=max_atk_cnt,
	}
	score=0
	--attack lines
	h_lines={}
	v_lines={}
	h_line_col=11
	h_line_col_old=3
	v_line_col=12
	v_line_col_old=13
	--enemies
	enemies={}
	enemy_active = false
	enemy_age = 0
	enemy_max_age = 500
	--field
	field_y=15
end

